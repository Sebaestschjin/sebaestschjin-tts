local Error = {}

Error.currentErrors = {}

function Error.add(...)
  local args = table.pack(...)
  for i=1, args.n do
    args[i] = tostring(args[i])
  end
  table.insert(Error.currentErrors, string.format(table.unpack(args)))
end

function Error.pop()
  local errors = Error.currentErrors
  Error.currentErrors = {}
  return errors
end

return Error